<!DOCTYPE html>
<html lang="en">

<head>
    <title> users</title>
    <% include ../partials/menubar%>
</head>

<body class="margin">

    <div style="margin: 10px 100px 10px 150px;">
            <h3> DASHBOARD USERS</h3>
            <h4> Filters</h4>
            <form method="GET" id="formFilter" style="margin: 10px 100px 10px 150px;">

                <input type="hidden" name="page" value="1">
                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="id" name="checkId">
                            <label class="form-check-label" for="id">
                                ID
                            </label>
                        </div>
                    </div>

                    <div class="col-10">
                        <div class="form-group">
                            <input type="text" name="id" class="form-control" id="id" placeholder="ID" value="">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" name="checkName" type="checkbox" id="name">
                            <label class="form-check-label" for="checkName">
                                Name
                            </label>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" id="name" placeholder="name">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" name="checkName" type="checkbox" id="name">
                            <label class="form-check-label" for="checkName">
                                Email
                            </label>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" id="name" placeholder="name">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="checkposition" id="member">
                            <label class="form-check-label" for="member">
                                Position 
                            </label>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="form-group">
                            <select name="position" id="position" class="form-control">
                                <option selected disabled> choose the position</option>
                                <% data.forEach((item, index) => { %>
                                <option value="<%= item.position %>"><%= item.position %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <label class="form-check-label">
                                Type Job
                            </label>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="fulltime" name="typejob"
                                value="fulltime">
                            <label class="custom-control-label" for="fulltime">Fulltime</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="part time" name="typejob"
                                value="part time">
                            <label class="custom-control-label" for="part time">Part time</label>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-success">search</button>
            </form>
        </div>

    <br><br>
    <div style="margin: 10px 100px 10px 150px;">
        <h5>OPTIONS COLUMNS</h5>
        <form action="/users/option" method="POST" style="margin-left: 50px;">
            <div class="row">
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cid" name="checkid" value="true"
                            <%= option.id ? `checked` : `` %>>
                        <label class="form-check-label" for="cid">
                            ID
                        </label>
                    </div>
                </div>

                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cname" name="checkname" value="true"
                            <%= option.name ? `checked` : `` %>>
                        <label class="form-check-label" for="cname">
                             Name
                        </label>
                    </div>
                </div>

                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cemail" name="checkemail" value="true"
                            <%= option.email ? `checked` : `` %>>
                        <label class="form-check-label" for="cemail">
                             Email
                        </label>
                    </div>
                </div>

                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cposition" name="checkposition" value="true"
                            <%= option.position ? `checked` : `` %>>
                        <label class="form-check-label" for="cposition">
                            Position
                        </label>
                    </div>
                </div>

                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="ctypejob" name="checktypejob" value="true"
                            <%= option.typejob ? `checked` : `` %>>
                        <label class="form-check-label" for="ctypejob">
                            Type job
                        </label>
                    </div>
                </div>

            </div>
            <br>
            <button type="submit" class="btn btn-success">apply</button>

        </form>

        <br> <br>
        <div style=" margin-left: 50px; margin-right: 50px;">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th <%= option.id ? `` : `hidden` %>> ID </th>
                        <th <%= option.name ? `` : `hidden` %>> NAME</th>
                        <th <%= option.email ? `` : `hidden` %>> EMAIL </th>
                        <th <%= option.position ? `` : `hidden` %>> POSITION </th>
                        <th <%= option.typejob ? `` : `hidden` %>> TYPE JOB </th>
                        <th>ACTION</th>
                </thead>
                <% data.forEach((item, index) => {  %>
                <tr scope="row">
                    <td <%= option.id ? `` : `hidden` %>> <%=item.userid%> </td>
                    <td <%= option.name ? `` : `hidden` %>> <%=item.firstname + ' ' + item.lastname%> </td>
                    <td <%= option.email ? `` : `hidden` %>> <%=item.email%> </td>
                    <td <%= option.position ? `` : `hidden` %>> <%=item.position%> </td>
                    <td <%= option.typejob ? `` : `hidden` %>> <%=item.typejob%> </td>
                    <td>
                        <a class="btn btn-outline-success" href="/users/edit/<%=item.userid%>"> edit
                            </a>
                        <a class="btn btn-outline-danger" onclick="return confirm('Are you sure ?');" href="/projects/delete/<%=item.userid%>"> delete </a>
                    </td>
                </tr>
                <%   }) %>
            </table>
            <br>

            
            <a href="/users/add" <button class="btn btn-success">Add New Users</button> </a>
        </div>

</body>

</html>